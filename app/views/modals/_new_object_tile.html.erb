<div class="new_tile col-sm-3 <%= model.name.downcase %>">
  <div class="panel panel-primary panel-add">
  	<div class="panel-body">
     	<article class="album">
     		<header>
	     		<%= link_to new_object_path, remote: true do %>
            <%= image_tag("placeholders/1x1.png") %>
					<% end %>
        </header>
        <div class="panel-heading" style='<%="margin-top:-10px" if defined? model %>'>
          <div>+</div>
        </div>
        <% if defined? model %>
	        <div class="panel-heading" style="margin-top:24px;">
	          <p class="title"><%= t("forms.new", :model => model.model_name.human) %></p>
	        </div>
        <% end %>
      </article>
    </div>
  </div>
</div>