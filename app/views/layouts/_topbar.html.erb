<div class="row topbar">
  <!-- Profile Info -->
  <div class="col-md-10 col-sm-8 clearfix">
    <ul class="user-info pull-left pull-none-xsm">
      <!-- Profile Info -->
      <li class="profile-info dropdown"><!-- add class "pull-right" if you want to place this from right -->
        <a href="<%= profile_index_path %>">
          <img src="<%=@user.restaurant.logo_image.url(:cropped_website) %>" class="profile-logo" />
          <ul class="profile-info-right">
            <li class="profile-name"><%=@user.restaurant.name %></li>
            <li class="profile-email"><%=@user.email %></li>
          </ul>
        </a>
      </li>
    </ul>
  </div>
  <div class="col-md-2 col-sm-4 clearfix hidden-xs">
    <ul class="list-inline links-list pull-right">
      <li class="sep"></li>
      <li>
        <a href="<%= logout_index_path %>"><%=t("layouts.topbar.logout")%> <i class="entypo-logout right"></i></a>
      </li>
    </ul>
  </div>
</div>