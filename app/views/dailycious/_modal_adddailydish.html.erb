<%= neon_modal :id => "adddailydish", :width => "678px", :title => "Add daily dish" do |m| %>
<%= form_tag({:controller => "ajax/daily_dish", :action => "adddailydish"}, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform validate", :id => "form_adddailydish"}) do %>
<input name="display_date" type="hidden" id="form-display_date" value="">
<%=neon_modal_body do |b| %>
<div class="row">
	<div class="col-sm-6 hidden-xs">
		<h4 class="margin-top-none">Upload image</h4>
		<%=neon_imageinput :instance_class => DailyDish, :name => :image %>
	</div>
	<div class="col-sm-6">
	  <div class="col-md-12 form-group">
      <label for="form-title" class="control-label"><strong>Title</strong></label>
	    <input name="title" type="text" class="form-control" id="form-title" placeholder="Title" value="" data-validate="maxlength[60]" required>
	  </div>
	  <div class="col-md-12 form-group">
      <label for="form-price" class="control-label"><strong>Price</strong></label>
	    <input name="price" type="text" class="form-control" id="form-price" placeholder="Price" value="" data-validate="number,maxlength[7]" required>
	  </div>
	</div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
<button type="submit" class="btn btn-success btn-icon icon-left">
	<i class="entypo-plus"></i>
  Add daily dish
</button>
<% end %>
<% end %>
<% end %>