<%= neon_modal :id => "editdailydish-#{daily_dish.id}", :width => "678px", :title => "Edit daily dish" do |m| %>
<%= form_tag({:controller => "ajax/daily_dish", :action => "editdailydish"}, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform validate", :id => "form_editdaildish"}) do %>
<input name="daily_dish_id" type="hidden" id="form-daily_dish_id" value="<%=daily_dish.id %>">
<%=neon_modal_body do |b| %>
<div class="row">
	<div class="col-sm-6 hidden-xs">
		<h4 class="margin-top-none">Upload image</h4>
    <%=neon_imagecrop :image => daily_dish.image %>
	</div>
	<div class="col-sm-6">
	  <div class="col-md-12 form-group">
      <label for="form-title" class="control-label"><strong>Title</strong></label>
	    <input name="title" type="text" class="form-control" id="form-title" placeholder="Title" value="<%=daily_dish.title %>" data-validate="maxlength[60]" required>
	  </div>
	  <div class="col-md-12 form-group">
      <label for="form-price" class="control-label"><strong>Price</strong></label>
	    <input name="price" type="text" class="form-control" id="form-price" placeholder="Price" value="<%=daily_dish.price %>" data-validate="number,maxlength[7]" required>
	  </div>
	</div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<%=render :partial => "neon/modal_footer_delete" %>
<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
<button type="submit" class="btn btn-success">Save daily dish</button>
<% end %>
<% end %>
<% end %>