<%=
raw(Jsonify::Builder.plain do |j|
  
  j.token                      @session.token
  
  j.location do
    j.id                         current_user.restaurant.id
    
    j.restaurant_image_url       current_user.restaurant.logo_image.url(:cropped_dailycious_retina)
    j.restaurant_image_fingerprint  current_user.restaurant.logo_image.present? ? current_user.restaurant.logo_image_fingerprint : "default"

    j.name                       current_user.restaurant.name
  
    j.address                    current_user.restaurant.location.address
    j.zip                        current_user.restaurant.location.zip
    j.city                       current_user.restaurant.location.city
    j.country                    current_user.restaurant.location.country
    
    j.favorites                  current_user.restaurant.favoriteRestaurants.count
    
    j.telephone                  current_user.restaurant.telephone
    j.email                      current_user.restaurant.email
    j.website                    current_user.restaurant.website
  
    j.tags(current_user.restaurant.tags) do |tag|
      tag.tag_lang.each do |key, value|
        j[key] = value
      end
    end
  end
  
end)
%>