<%=
raw(Jsonify::Builder.plain do |j|
  
  j.id                         @req_location.restaurant.id
  
  j.restaurant_image_url       @req_location.restaurant.logo_image.present? ? @req_location.restaurant.logo_image.url(:cropped_dailycious_retina) : nil
  j.restaurant_image_fingerprint  @req_location.restaurant.logo_image.present? ? @req_location.restaurant.logo_image_fingerprint : nil

  j.name                       @req_location.restaurant.name
  
  j.address                    @req_location.address
  j.zip                        @req_location.zip
  j.city                       @req_location.city
  j.country                    @req_location.country
  
  j.latitude                   @req_location.latitude
  j.longitude                  @req_location.longitude
  
  j.favorites                  @req_location.restaurant.favoriteRestaurants.count

  j.telephone                  @req_location.restaurant.telephone
  j.email                      @req_location.restaurant.email
  j.website                    @req_location.restaurant.website
  
  j.categories(@req_location.restaurant.categories) do |category|
    category.category_lang.each do |key, value|
      j[key] = value
    end
  end
  
  j.daily_dishes(@req_location.restaurant.daily_dishes.find(
    :all,
    :conditions => [
      "display_date = (?)",
      Date.today.to_datetime
    ]
  )) do |daily_dish|
    j.image_map_url              daily_dish.image.present? ? daily_dish.image.url(:cropped_map_retina) : nil
    j.image_small_url            daily_dish.image.present? ? daily_dish.image.url(:cropped_small_retina) : nil
    j.image_url                  daily_dish.image.present? ? daily_dish.image.url(:cropped_default_retina) : nil
    j.image_fingerprint          daily_dish.image.present? ? daily_dish.image_fingerprint : nil
    j.title                      daily_dish.title
    j.price                      ("%.2f" % daily_dish.price).gsub(".", ",")
  end
  
end)
%>