<%=
raw(Jsonify::Builder.plain do |j|
  
  j.id                         @user.restaurant.id
  
  date = Date.today
  date += @add_weeks*7
  
  j.daily_dishes(@user.restaurant.daily_dishes.find(
    :all,
    :conditions => [
      "display_date >= (?) AND display_date <= (?)",
      date.beginning_of_week.to_datetime,
      date.end_of_week.to_datetime
    ]
  )) do |daily_dish|  
    j.id                         daily_dish.id
    j.display_date               daily_dish.display_date.strftime("%d-%m-%Y")
    j.image_small_url            daily_dish.image.present? ? daily_dish.image.url(:cropped_small_retina) : nil
    j.image_fingerprint          daily_dish.image.present? ? daily_dish.image_fingerprint : nil
    j.title                      daily_dish.title
    j.price                      ("%.2f" % daily_dish.price).gsub(".", ",")
  end
  
end)
%>