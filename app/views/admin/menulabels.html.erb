<% content_for :body_class, "page-body" %>
<div class="page-container">
  <div class="sidebar-menu">
    <%=render :partial => "layouts/dashboard_menuheader" %>
    <%=render :partial => "layouts/dashboard_menu" %>
  </div>
  <div class="main-content">
    <%=render :partial => "layouts/dashboard_topbar" %>
    <ol class="breadcrumb bc-3">
      <li>
        <a href="<%=url_for :controller => "dashboard", :action => "index" %>"><i class="entypo-home"></i>Dashboard</a>
      </li>
      <li>
        <a href="<%=url_for :controller => "admin", :action => "index" %>">Admin</a>
      </li>
      <li class="active">
        <strong>All menu labels</strong>
      </li>
    </ol>
    <h2>All menu labels</h2>
    <br />
    <div class="row">
      <div class="col-md-12">
        <table class="table table-striped responsive">
          <thead>
            <tr>
              <th width="40%">Menu label</th>
            </tr>
          </thead>
          <tbody>
            <% MenuLabel.all.each do |menuLabel| %>
            <tr style="font-size: 18px;">
              <td>
                <a href="javascript:;" onclick="jQuery('#modal-editmenulabel-<%=menuLabel.id %>').modal('show');">
                  <%=menuLabel.title %>
                </a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <a href="javascript:;" onclick="jQuery('#modal-addmenulabel').modal('show');">
          <button type="button" class="btn btn-green btn-icon icon-left">
          	Add menu label
          	<i class="entypo-plus"></i>
          </button>
        </a>
      </div>
    </div>
  </div>
</div>
<%=render :partial => "modal_addmenulabel" %>
<% MenuLabel.all.each do |menuLabel| %>
<%=render :partial => "modal_editmenulabel", :locals => {:menuLabel => menuLabel} %>
<% end %>