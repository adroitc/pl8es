<ol class="breadcrumb bc-3">
	<li>
		<a href="<%= dashboard_index_path %>"><i class="entypo-home"></i>Dashboard</a>
	</li>
	<li>
		<a href="<%= admin_index_path %>">Admin</a>
	</li>
	<li class="active">
		<strong>All fonts</strong>
	</li>
</ol>
<h2>All fonts</h2>
<br />
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped responsive">
			<thead>
				<tr>
					<th>Font</th>
				</tr>
			</thead>
			<tbody>
				<% SupportedFont.all.sort_by{|supportedFont|
					supportedFont.title
				}.each do |supportedFont| %>
				<tr style="font-size: 18px;">
					<td>
						<a href="javascript:;" onclick="jQuery('#modal-editfont-<%=supportedFont.id %>').modal('show');">
							<%=supportedFont.title %>
						</a>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<a href="javascript:;" onclick="jQuery('#modal-addfont').modal('show');">
			<button type="button" class="btn btn-info btn-icon icon-left">
				Add font
				<i class="entypo-plus"></i>
			</button>
		</a>
	</div>
</div>

<%=render :partial => "modal_addfont" %>
<% SupportedFont.all.sort_by{|supportedFont|
              supportedFont.title
            }.each do |supportedFont| %>
<%=render :partial => "modal_editfont", :locals => {:supportedFont => supportedFont} %>
<% end %>