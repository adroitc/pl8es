<ol class="breadcrumb bc-3">
	<li>
		<a href="<%= dashboard_index_path %>"><i class="entypo-home"></i>Dashboard</a>
	</li>
	<li>
		<a href="<%= admin_index_path %>">Admin</a>
	</li>
	<li class="active">
		<strong>All users</strong>
	</li>
</ol>
<h2>All users</h2>
<br />
<div class="row">
	<div class="col-md-12">
		<table class="table table-striped responsive">
			<thead>
				<tr>
					<th>User</th>
					<th>Email</th>
					<th>Devices</th>
					<th>Menus</th>
					<th>Dishes</th>
					<th>Daily dishes (all)</th>
				</tr>
			</thead>
			<tbody>
				<% User.all.joins(:restaurant).order("restaurants.name").each do |user| %>
				<tr style="font-size: 16px;">
					<td>
						<a href="javascript:;" onclick="jQuery('#modal-edituser-<%=user.id %>').modal('show');">
							<%=user.restaurant.name %>
						</a>
					</td>
					<td>
						<%=user.email %>
					</td>
					<td>
						<%=user.restaurant.clients.actives.count %>
					</td>
					<td>
						<%=user.restaurant.menus.count %>
					</td>
					<td>
						<%=user.restaurant.dishes.count %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<% content_for :modals do %>
	<% User.all.joins(:restaurant).order("restaurants.name").each do |user| %>
		<%=render :partial => "modal_edituser", :locals => {:user => user} %>
	<% end %>
<% end %>