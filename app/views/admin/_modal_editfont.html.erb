<%= neon_modal :id => "editfont-#{supportedFont.id}", :width => "678px", :title => "Edit font" do |m| %>
<%= form_tag({:controller => "ajax/admin", :action => "editfont"}, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform validate", :id => "form_addfont"}) do %>
<%=neon_modal_body do |b| %>
<input name="supportedFont_id" type="hidden" id="form-supportedFont_id" value="<%=supportedFont.id %>">
<div class="row">
	<div class="col-sm-12 form-group">
    <label for="form-title" class="control-label"><strong>Font title</strong></label>
		<input name="title" type="text" class="form-control" id="form-title" placeholder="Font title" data-validate="maxlength[250]" value="<%=supportedFont.title %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_navigation" class="control-label"><strong>Navigation font name</strong></label>
		<input name="name_navigation" type="text" class="form-control" id="form-name_navigation" placeholder="Navigation font name" data-validate="maxlength[250]" value="<%=supportedFont.name_navigation %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_navigation" class="control-label"><strong>Navigation font size</strong></label>
		<input name="size_navigation" type="text" class="form-control" id="form-size_navigation" placeholder="Navigation font size" data-validate="number,maxlength[9]" value="<%=supportedFont.size_navigation %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_heading" class="control-label"><strong>Heading font name</strong></label>
		<input name="name_heading" type="text" class="form-control" id="form-name_heading" placeholder="Heading font name" data-validate="maxlength[250]" value="<%=supportedFont.name_heading %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_heading" class="control-label"><strong>Heading font size</strong></label>
		<input name="size_heading" type="text" class="form-control" id="form-size_heading" placeholder="Heading font size" data-validate="number,maxlength[9]" value="<%=supportedFont.size_heading %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_heading_small" class="control-label"><strong>Heading-small font name</strong></label>
		<input name="name_heading_small" type="text" class="form-control" id="form-name_heading_small" placeholder="Heading-small font name" data-validate="maxlength[250]" value="<%=supportedFont.name_heading_small %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_heading_small" class="control-label"><strong>Heading-small font size</strong></label>
		<input name="size_heading_small" type="text" class="form-control" id="form-size_heading_small" placeholder="Heading-small font size" data-validate="number,maxlength[9]" value="<%=supportedFont.size_heading_small %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_description" class="control-label"><strong>Description font name</strong></label>
		<input name="name_description" type="text" class="form-control" id="form-name_description" placeholder="Description font name" data-validate="maxlength[250]" value="<%=supportedFont.name_description %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_description" class="control-label"><strong>Description font size</strong></label>
		<input name="size_description" type="text" class="form-control" id="form-size_description" placeholder="Description name" data-validate="number,maxlength[9]" value="<%=supportedFont.size_description %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_price" class="control-label"><strong>Price font name</strong></label>
		<input name="name_price" type="text" class="form-control" id="form-name_price" placeholder="Price font name" data-validate="maxlength[250]" value="<%=supportedFont.name_price %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_price" class="control-label"><strong>Price font size</strong></label>
		<input name="size_price" type="text" class="form-control" id="form-size_price" placeholder="Price font size" data-validate="number,maxlength[9]" value="<%=supportedFont.size_price %>">
	</div>
</div>
<div class="row">
	<div class="col-sm-6 form-group">
    <label for="form-name_card_tab_title" class="control-label"><strong>Card-tab-title font name</strong></label>
		<input name="name_card_tab_title" type="text" class="form-control" id="form-name_card_tab_title" placeholder="Card-tab-title font name" data-validate="maxlength[250]" value="<%=supportedFont.name_card_tab_title %>">
	</div>
	<div class="col-sm-6 form-group">
    <label for="form-size_card_tab_title" class="control-label"><strong>Card-tab-title font size</strong></label>
		<input name="size_card_tab_title" type="text" class="form-control" id="form-size_card_tab_title" placeholder="Card-tab-title font size" data-validate="number,maxlength[9]" value="<%=supportedFont.size_card_tab_title %>">
	</div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<%=render :partial => "neon/modal_footer_delete" %>
<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
<button type="submit" class="btn btn-info">Save font</button>
<% end %>
<% end %>
<% end %>