<% content_for :body_class, "login-page login-form-fall" %>
<div class="login-container">
	<div class="login-header login-caret">
		<div class="login-content">
			<a href="<%=url_for :only_path => false %>" class="logo">
        <%
        logo = asset_path("logo-pl8.png")
        logo = asset_path("logo-dailycious.png") if params[:product_referer] == "d"
        logo = asset_path("logo-menumalist.png") if params[:product_referer] == "m"
        %>
				<img src="<%=logo %>" width="120" alt="" />
			</a>
			<p class="description"><%=t("signup.welcome") %></p>
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span><%=t("signup.logging_in") %></span>
			</div>
		</div>
	</div>
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
      <%= form_tag(session_signup_restaurant_path, {:role => "form", :id => "form_register", :class => "pl8es_c_ajaxform validate"}) do %>
				<div class="form-steps">
					<div class="step current" id="step-1">
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="address" type="text" class="form-control" id="form-address" placeholder="<%=t("signup.address_placeholder") %>" value="<%=session[:signup] != nil ? session[:signup][:address] : nil %>" required data-validate="validaddress,maxlength[255]" data-message-required="<%=t("validation.required") %>" data-message-maxlength="<%=t("validation.minlength",{l:"255"}) %>" data-message-validaddress="<%=t("validation.validaddress") %>">
                <input name="latitude" type="hidden" class="form-control" id="form-latitude" value="<%=session[:signup][:latitude] %>">
                <input name="longitude" type="hidden" class="form-control" id="form-longitude" value="<%=session[:signup][:longitude] %>">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="zip" type="text" class="form-control" id="form-zip" placeholder="<%=t("signup.zip_placeholder") %>" value="<%=session[:signup] != nil ? session[:signup][:zip] : nil %>" required data-validat="maxlength[255]" data-message-required="<%=t("validation.required") %>" data-message-maxlength="<%=t("validation.minlength",{l:"255"}) %>">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="city" type="text" class="form-control" id="form-city" placeholder="<%=t("signup.city_placeholder") %>" value="<%=session[:signup] != nil ? session[:signup][:city] : nil %>" required data-validat="maxlength[255]" data-message-required="<%=t("validation.required") %>" data-message-maxlength="<%=t("validation.minlength",{l:"255"}) %>">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="country" type="text" class="form-control" id="form-country" placeholder="<%=t("signup.country_placeholder") %>" value="<%=session[:signup] != nil ? session[:signup][:country] : nil %>" required data-validat="maxlength[255]" data-message-required="<%=t("validation.required") %>" data-message-maxlength="<%=t("validation.minlength",{l:"255"}) %>">
							</div>
						</div>
						<div class="form-group">
              <button type="submit" class="btn btn-primary btn-block btn-login">
                <i class="entypo-right-open-mini"></i>
                <%=t("signup.continue") %>
              </button>
						</div>
					</div>
				</div>
      <% end %>
			<div class="login-bottom-links">
				<a href="<%= login_index_path %>" class="link">
					<i class="entypo-lock"></i>
					<%=t("signup.footer_return") %>
				</a>
				<br />
				<a href="http://pl8.cc/agb/" target="_blank"><%=t("signup.footer_tos") %></a>  - <a href="http://pl8.cc/impressum/" target="_blank"><%=t("signup.footer_policy") %></a>
			</div>
		</div>
	</div>
</div>