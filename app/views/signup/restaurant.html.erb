<% content_for :body_class, "page-body login-page login-form-fall" %>
<div class="login-container">
	<div class="login-header login-caret">
		<div class="login-content">
			<a href="index.html" class="logo">
				<img src="assets/images/logo@2x.png" width="120" alt="" />
			</a>
			<p class="description"><%=t("signup.welcome") %></p>
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span><%=t("signup.logging_in") %></span>
			</div>
		</div>
	</div>
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
      <%= form_tag({:controller => "ajax/session", :action => "signup_restaurant"}, {:role => "form", :id => "form_register", :class => "pl8es_c_ajaxform validate"}) do %>
				<div class="form-register-success">
					<i class="entypo-check"></i>
					<h3><%=t("signup.successful") %></h3>
					<p><%=t("signup.successful_2") %></p>
				</div>
				<div class="form-steps">
					<div class="step current" id="step-1">
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="address" type="text" class="form-control" id="form-address" placeholder="<%=t("signup.address_placeholder") %>" data-validate="validaddress" data-message-required="<%=t("validation.required") %>" data-message-validaddress="<%=t("validation.validaddress") %>" value="<%=session[:signup] != nil ? session[:signup][:address] : nil %>" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="zip" type="text" class="form-control" id="form-zip" placeholder="<%=t("signup.zip_placeholder") %>" data-validate="maxlength[28]" value="<%=session[:signup] != nil ? session[:signup][:zip] : nil %>" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="city" type="text" class="form-control" id="form-city" placeholder="<%=t("signup.city_placeholder") %>" data-validate="maxlength[28]" value="<%=session[:signup] != nil ? session[:signup][:city] : nil %>" required>
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
                <input name="country" type="text" class="form-control" id="form-country" placeholder="<%=t("signup.country_placeholder") %>" data-validate="maxlength[28]" value="<%=session[:signup] != nil ? session[:signup][:country] : nil %>" required>
							</div>
						</div>
						<div class="form-group">
              <button type="submit" class="btn btn-primary btn-block btn-login">
                <i class="entypo-right-open-mini"></i>
                <%=t("signup.continue") %>
              </button>
						</div>
					</div>
				</div>
      <% end %>
			<div class="login-bottom-links">
				<a href="<%=url_for :controller => "login", :action => "index" %>" class="link">
					<i class="entypo-lock"></i>
					<%=t("signup.footer_return") %>
				</a>
				<br />
				<a href="#"><%=t("signup.footer_tos") %></a>  - <a href="#"><%=t("signup.footer_policy") %></a>
			</div>
		</div>
	</div>
</div>