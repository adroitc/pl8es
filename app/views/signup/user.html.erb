<% content_for :body_class, "page-body login-page login-form-fall" %>
<div class="login-container">
	<div class="login-header login-caret">
		<div class="login-content">
			<a href="index.html" class="logo">
				<img src="assets/images/logo@2x.png" width="120" alt="" />
			</a>
			<p class="description"><%=t("signup.welcome") %></p>
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span><%=t("signup.logging_in") %></span>
			</div>
		</div>
	</div>
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
      <%= form_tag({:controller => "ajax/session", :action => "signup_user"}, {:role => "form", :id => "form_register", :class => "pl8es_c_ajaxform validate"}) do %>
				<div class="form-register-success">
					<i class="entypo-check"></i>
					<h3><%=t("signup.successful") %></h3>
					<p><%=t("signup.successful_2") %></p>
				</div>
				<div class="form-steps">
					<div class="step current" id="step-1">
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
	               <input name="email" type="text" class="form-control" id="form-email" placeholder="<%=t("signup.email_placeholder") %>" value="<%=session[:signup] != nil ? session[:signup][:email] : nil %>" required data-validate="minlength[6],email" data-message-required="<%=t("validation.required") %>" data-message-minlength="<%=t("validation.minlength",{l:"6"}) %>" data-message-email="<%=t("validation.email") %>">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group">
								<div class="input-group-addon">
									<i class="entypo-user"></i>
								</div>
	               <input name="password" type="password" class="form-control" id="form-password" placeholder="<%=t("signup.password_placeholder") %>" value="" required data-validate="minlength[8],password" data-message-required="<%=t("validation.required") %>" data-message-minlength="<%=t("validation.minlength",{l:"8"}) %>">
							</div>
						</div>
						<div class="form-group">
              <button type="submit" class="btn btn-success btn-block btn-login">
                <i class="entypo-right-open-mini"></i>
                <%=t("signup.complete") %>
              </button>
						</div>
					</div>
				</div>
      <% end %>
			<div class="login-bottom-links">
				<a href="<%=url_for :controller => "login", :action => "index" %>" class="link">
					<i class="entypo-lock"></i>
					<%=t("signup.footer_return") %>
				</a>
				<br />
				<a href="#"><%=t("signup.footer_tos") %></a>  - <a href="#"><%=t("signup.footer_policy") %></a>
			</div>
		</div>
	</div>
</div>