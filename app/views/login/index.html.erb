<% content_for :body_class, "page-body login-page login-form-fall" %>
<div class="login-container">
	<div class="login-header login-caret">
		<div class="login-content">
			<a href="<%=url_for :only_path => false %>" class="logo">
        <%
        logo = asset_path("logo-pl8.png")
        logo = asset_path("logo-dailycious.png") if params[:product_referer] == "d"
        logo = asset_path("logo-menumalist.png") if params[:product_referer] == "m"
        %>
				<img src="<%=logo %>" width="120" alt="" />
			</a>
			<p class="description"><%=t("login.welcome") %></p>
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span><%=t("login.logging_in") %></span>
			</div>
		</div>
	</div>
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
			<div class="form-login-error">
				<h3><%=t("login.invalid_title") %></h3>
				<p><%=t("login.invalid_msg") %></p>
			</div>
      <%= form_tag({:controller => "ajax/session", :action => "login"}, {:role => "form", :id => "form_login", :class => "pl8es_c_ajaxform validate"}) do %>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="entypo-mail"></i>
						</div>
						<input type="text" class="form-control" name="email" id="email" placeholder="<%=t("login.email_placeholder") %>" required data-message-required="<%=t("errors.required") %>" />
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="entypo-key"></i>
						</div>
						<input type="password" class="form-control" name="password" id="password" placeholder="<%=t("login.password_placeholder") %>" required data-message-required="<%=t("errors.required") %>" />
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success btn-block btn-login">
						<i class="entypo-login"></i>
						<%=t("login.login") %>
					</button>
				</div>
				<div class="form-group">
          <a href="<%=url_for :controller => "signup", :action => "index" %>">
				  	<button type="button" class="btn btn-primary btn-block btn-login">
				  		<i class="entypo-user"></i>
				  		<%=t("login.signup") %>
				  	</button>
          </a>
				</div>
      <% end %>
			<div class="login-bottom-links">
				<a href="<%=url_for :controller => "login", :action => "forgot" %>" class="link" class="link">
					<i class="entypo-lock"></i>
					<%=t("login.forgot_password") %>
        </a>
				<br />
				<a href="http://pl8.cc/agb/"><%=t("signup.footer_tos") %></a>  - <a href="http://pl8.cc/impressum/"><%=t("signup.footer_policy") %></a>
			</div>
		</div>
	</div>
</div>