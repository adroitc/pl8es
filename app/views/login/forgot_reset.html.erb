<% content_for :body_class, "login-page login-form-fall" %>
<div class="login-container">
	<div class="login-header login-caret">
		<div class="login-content">
			<a href="<%=url_for :only_path => false %>" class="logo">
        <%
        logo = asset_path("logo-pl8.png")
        logo = asset_path("logo-dailycious.png") if params[:product_referer] == "d"
        logo = asset_path("logo-menumalist.png") if params[:product_referer] == "m"
        %>
				<img src="<%=logo %>" width="120" alt="" />
			</a>
			<p class="description"><%=t("login.welcome") %></p>
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span><%=t("login.logging_in") %></span>
			</div>
		</div>
	</div>
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
			<div class="form-login-error">
				<h3><%=t("login.invalid_title") %></h3>
				<p><%=t("login.invalid_msg") %></p>
			</div>
      <%= form_tag(session_login_path, {:role => "form", :id => "form_login", :class => "pl8es_c_ajaxform validate"}) do %>
        <input name="user_id" type="hidden" value="<%=params[:user_id] %>">
        <input name="reset_token" type="hidden" value="<%=params[:reset_token] %>">
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="entypo-lock"></i>
						</div>
	          <input name="password" type="password" class="form-control" id="form-password" placeholder="<%=t("login.password_new_placeholder") %>" data-validate="minlength[8],maxlength[255],secpass" data-message-minlength="<%=t("validation.minlength",{l:"8"}) %>" data-message-maxlength="<%=t("validation.maxlength",{l:"255"}) %>" data-message-secpass="<%=t("validation.securepassword") %>">
          </div>
        </div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="entypo-lock"></i>
						</div>
	          <input name="password_confirm" type="password" class="form-control" id="form-password_confirm" placeholder="<%=t("login.password_confirm_placeholder") %>" data-validate="equalTo[#form-password]"  data-message-equalTo="<%=t("validation.confirm_password") %>">
					</div>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success btn-block btn-login">
						<i class="entypo-login"></i>
						<%=t("login.login") %>
					</button>
				</div>
      <% end %>
			<div class="login-bottom-links">
				<a href="http://pl8.cc/agb/" target="_blank"><%=t("signup.footer_tos") %></a>  - <a href="http://pl8.cc/impressum/" target="_blank"><%=t("signup.footer_policy") %></a>
			</div>
		</div>
	</div>
</div>