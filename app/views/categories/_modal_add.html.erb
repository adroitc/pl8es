<%= neon_modal :id => "add_category", :width => "678px", :title => t("menumalist.category_modal_add_title"), :languages => menu.restaurant.languages, :default_language => menu.restaurant.default_language do |m| %>
	<%= form_tag(category_add_path, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform validate", :id => "form_add_category"}) do %>
		<input name="menu_id" type="hidden" id="form-menu_id" value="<%=menu.id %>">
		<% if defined? category %>
			<input name="category_id" type="hidden" id="form-category_id" value="<%=category.id %>">
		<% end %>
		<%=neon_modal_body do |b| %>
			<div class="row">
				<div class="col-sm-6 hidden-xs">
					<h4 class="margin-top-none"><%= t("forms.upload_image") %></h4>
					 <%=render :partial => "neon/image_upload", :locals => {:instance_class => Category, :name => :image} %>
				</div>
				<div class="col-sm-6 tab-content">
					<%
					current_locale = I18n.locale
					menu.restaurant.languages.each do |language|
					I18n.locale = language.locale
					%>
					<span class="tab-pane <%="active" if menu.restaurant.default_language == language %> form-group" id="modal-add_category-lang-<%=language.locale %>">
						<label for="form-title[<%=language.locale %>]" class="control-label"><strong><% I18n.locale = current_locale %><%=t("menumalist.category_title") %><% I18n.locale = language.locale %></strong> - <%=language.title.capitalize %><%=" (Default)" if menu.restaurant.default_language == language %></label>
						<input name="title[<%=language.locale %>]" type="text" class="form-control" id="form-title[<%=language.locale %>]" placeholder="<% I18n.locale = current_locale %><%=t("menumalist.category_title_placeholder") %><% I18n.locale = language.locale %>" data-validate="<%="required" if menu.restaurant.default_language == language %>,minlength[4],maxlength[40]" data-message-required="<%=t("validation.required") %>" data-message-minlength="<%=t("validation.minlength",{l:"4"}) %>" data-message-maxlength="<%=t("validation.maxlength",{l:"40"}) %>">
					</span>
					<%
					end
					I18n.locale = current_locale
					%>
					<label class="control-label"><strong><%=t("menumalist.category_design") %></strong></label>
					<div class="row">
						<div class="col-sm-6">
							<input class="icheck-2-radio" type="radio" id="form-style-1" name="style" value="default" checked>
							<label for="form-style-1"><%=t("menumalist.category_design_default") %></label>
						</div>
						<div class="col-sm-6">
							<input class="icheck-2-radio" type="radio" id="form-style-2" name="style" value="grid">
							<label for="form-style-2"><%=t("menumalist.category_design_grid") %></label>
						</div>
					</div>
				</div>
			</div>
		<% end %>
		<%=neon_modal_footer do |b| %>
			<button type="button" class="btn btn-default" data-dismiss="modal"><%=t("menumalist.category_modal_add_cancel") %></button>
			<button type="submit" class="btn btn-info btn-icon icon-left">
				<i class="entypo-plus"></i>
				<%=t("menumalist.category_modal_add_submit") %>
			</button>
		<% end %>
	<% end %>
<% end %>