<%= neon_modal :id => "addnavigation", :width => "65%", :title => "Add new category" do |m| %>
<%= form_tag({:controller => "ajax", :action => "addnavigation"}, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform", :id => "form_addnavigation"}) do %>
<input name="menu_id" type="hidden" id="form-menu_id" value="<%=menu.id %>">
<% if defined? navigation %>
<input name="navigation_id" type="hidden" id="form-navigation_id" value="<%=navigation.id %>">
<% end %>
<%=neon_modal_body do |b| %>
<div class="row">
  <div class="col-sm-12">
		<ul class="nav nav-tabs right-aligned" style="margin-top:-10px;">
      <% menu.languages.each do |language| %>
			<li <%="class=active" if menu.languages.first == language %>>
        <a href="#modal-addmenu-tab-<%=language.locale %>" data-toggle="tab">
					<span class="visible-xs"><%=language.locale.capitalize %><%=" (Default)" if menu.default_language == language %></span>
					<span class="hidden-xs"><%=language.title.capitalize %><%=" (Default)" if menu.default_language == language %></span>
				</a>
			</li>
      <% end %>
		</ul>
  </div>
	<div class="col-sm-6 hidden-xs">
		<h4 class="margin-top-none">Upload Image</h4>
		<%=neon_imageinput :name => "image" %>
	</div>
	<div class="col-sm-6">
		<div class="form-group tab-content">
      <% menu.languages.each do |language| %>
      <div class="tab-pane <%="active" if menu.languages.first == language %>" id="modal-addmenu-tab-<%=language.locale %>">
        <label for="form-title[<%=language.locale %>]" class="control-label"><strong>Title</strong> - <%=language.title.capitalize %><%=" (Default)" if menu.default_language == language %></label>
			  <input name="title[<%=language.locale %>]" type="text" class="form-control" id="form-title[<%=language.locale %>]" placeholder="Enter album title">
      </div>
      <% end %>
		</div>
	</div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
<button type="submit" class="btn btn-success btn-icon icon-left">
	<i class="entypo-plus"></i>
	Add navigation
</button>
<% end %>
<% end %>
<% end %>