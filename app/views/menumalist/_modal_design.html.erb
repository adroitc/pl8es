<%=neon_modal_body do |b| %>
<div class="row" style="margin-bottom:14px;">
	<div class="col-sm-12">
		<div class="form-group">
      <label for="form-" class="control-label">Colors</label>
  		<ul class="ui-selectable" style="width:auto">
        <li class="col-sm-3" style="height:100px;">test</li>
