<%= neon_modal :id => "editmenu-#{menu.id}", :width => "678px", :title => t("menumalist.menu_modal_edit_title") do |m| %>
<%= form_tag({:controller => "ajax/menu", :action => "editmenu"}, {:role => "form", :class => "pl8es_c_ajaxform", :id => "form_editmenu"}) do %>
<input name="menu_id" type="hidden" id="form-menu_id" value="<%=menu.id %>">
<%=neon_modal_body do |b| %>
<div class="row">
	<div class="col-md-12">
		<div class="form-group">
			<label for="form-title" class="control-label"><%=t("menumalist.menu_name") %></label>
			<input name="title" type="text" class="form-control" id="form-title" placeholder="<%=t("menumalist.menu_name_placeholder") %>" value="<%=menu.title %>">
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="form-group">
			<label class="control-label"><%=t("menumalist.menu_default") %></label>
      <br />
      <span class="pl8es_c_toggledefaultmenu">
        <button type="button" class="btn btn-green btn-icon disabled icon-left">
        	<%=t("menumalist.menu_default_default") %>
        	<i class="entypo-flag"></i>
        </button>
      </span>
      <a href="javascript:;" onclick="pl8es_f_makedefaultmenu();" class="pl8es_c_makedefaultmenu">
        <button type="button" class="btn btn-default btn-icon icon-left">
        	<%=t("menumalist.menu_default_make_default") %>
        	<i class="entypo-flag"></i>
        </button>
      </a>
      <a href="javascript:;" onclick="pl8es_f_revertdefaultmenu();" class="pl8es_c_revertdefaultmenu">
        <button type="button" class="btn btn-warning btn-xs">
        	<%=t("menumalist.menu_default_default_undo") %>
        </button>
      </a>
		</div>
	</div>
</div>
<div class="row pl8es_c_makedefaultmenu" style="margin-bottom:14px;">
	<div class="col-md-12">
		<label for="field-1" class="control-label"><%=t("menumalist.menu_time") %></label>
  </div>
	<div class="col-md-12">
  	<div class="col-md-6 input-group" style="padding-left:0px;">
			<label for="form-from_time" class="control-label"><%=t("menumalist.menu_from") %></label>
      <div class="input-group">
  	   	<input name="from_time" type="text" class="form-control timepicker" id="form-from_time" data-template="dropdown" data-show-seconds="false" data-default-time="<%=menu.from_time %>" data-show-meridian="false" data-minute-step="5" />
  	    <div class="input-group-addon">
  	    	<a href="#"><i class="entypo-clock"></i></a>
  	    </div>
      </div>
    </div>
  	<div class="col-md-6 input-group" style="padding-right:0px;">
			<label for="form-to_time" class="control-label"><%=t("menumalist.menu_to") %></label>
      <div class="input-group">
  	    <input name="to_time" type="text" class="form-control timepicker" id="form-to_time" data-template="dropdown" data-show-seconds="false" data-default-time="<%=menu.to_time %>" data-show-meridian="false" data-minute-step="5" />
  	    <div class="input-group-addon">
  	    	<a href="#"><i class="entypo-clock"></i></a>
  	    </div>
      </div>
    </div>
	</div>
</div>
<div class="row" style="margin-bottom:14px;">
	<div class="col-md-12">
		<label for="form-languages" class="control-label">Select default language</label>
    </br>
	  <select name="default_language" id="form-default_language" class="col-md-4 select2" data-allow-clear="false" data-placeholder="Select default language" style="padding:0px;">
      <% Language.all.each do |language| %>
	  	<option value="<%=language.id %>" <%="selected" if menu.default_language == language %>><%=language.title.capitalize %></option>
      <% end %>
	  </select>
	</div>
</div>
<div class="row" style="margin-bottom:14px;">
	<div class="col-md-12">
		<label for="form-languages" class="control-label"><%=t("menumalist.menu_languages") %></label>
    <br />
    <%
    languages = menu.languages
    Language.all.each do |language|
    %>
    <div class="col-sm-3">
      <input class="icheck-2-checkbox" type="checkbox" id="form-language-<%=language.id %>" name="languages[<%=language.id %>]" <%="disabled" if menu.default_language == language %> <%="checked" if languages.exists?(language.id) %>>
      <label for="form-language-<%=language.id %>"><%=language.title.capitalize %></label>
    </div>
    <% end %>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<div class="form-group">
			<label for="field-1" class="control-label"><%=t("menumalist.menu_delete") %></label>
      <br />
      <a href="javascript:;" onclick="pl8es_f_initdeletemenu();" class="pl8es_c_initdeletemenu">
        <button type="button" class="btn btn-red btn-icon icon-left">
        	<%=t("menumalist.menu_delete_delete") %>
        	<i class="entypo-cancel"></i>
        </button>
      </a>
      <span class="pl8es_c_confirmdeletemenu">
        <%=t("menumalist.menu_delete_sure") %>
        <a href="javascript:;" onclick="pl8es_f_confirmdeletemenu(<%=menu.id %>);">
          <button type="button" class="btn btn-red btn-icon icon-left">
          	<%=t("menumalist.menu_delete_yes") %>
          	<i class="entypo-cancel"></i>
          </button>
        </a>
        <a href="javascript:;" onclick="pl8es_f_revertdeletemenu();">
          <button type="button" class="btn btn-warning btn-xs">
            <%=t("menumalist.menu_delete_keep") %>
          </button>
        </a>
      </span>
		</div>
	</div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<button type="button" class="btn btn-default" data-dismiss="modal"><%=t("menumalist.menu_modal_edit_cancel") %></button>
<button type="submit" class="btn btn-success" ><%=t("menumalist.menu_modal_edit_submit") %></button>
<% end %>
<% end %>
<% end %>