<ol class="breadcrumb bc-3">
	<li>
		<a href="<%=dashboard_index_path %>">
			<i class="entypo-home"></i>
			<%=t("layouts.menu.dashboard") %>
		</a>
	</li>
	<li class="active">
		<strong><%=t("layouts.menu.restaurant") %></strong>
	</li>
</ol>

<div class="profile-env">

	<header class="row profile-head">
		<div class="col-sm-2">
			<img src="<%=current_user.restaurant.logo_image.url(:cropped_website) %>" alt="" class="" width="108" height="72" />
		</div>
		<div class="col-sm-10">
			<ul class="profile-info-sections">
				<li>
					<div class="profile-name">
						<strong style="color:#000">
							<%=current_user.restaurant.name %>
						</strong>
						<span>
							<%=current_user.restaurant.email %>
						</span>
					</div>
				</li>
				<li>
					<div class="profile-stat">
						<h3><%=current_user.restaurant.menus.count %></h3>
						<a href="<%=menus_path %>">
							<span><%=current_user.restaurant.menus.count == 1 ? t("profile.menu") : t("profile.menus") %></span>
						</a>
					</div>
				</li>
				<li>
					<div class="profile-stat">
						<h3><%= current_user.restaurant.daily_dishes.where(:display_date => Date.today.to_datetime).count %></h3>
						<span><%= current_user.restaurant.daily_dishes.where(:display_date => Date.today.to_datetime).count == 1 ? t("profile.dish") : t("profile.dishes") %></span>
					</div>
				</li>
			</ul>
		</div>
	</header>
	<section class="profile-info-tabs">
		<div class="row">
			<div class="col-sm-offset-2 col-sm-10">
				<ul class="user-details">
					<li>
						<i class="entypo-location"></i>
						<%=current_user.restaurant.location.address %>
					</li>
					<li>
						<i class="entypo-location"></i>
						<%=current_user.restaurant.location.zip %>, <%=current_user.restaurant.location.city %>
					</li>
					<li>
						<i class="entypo-location"></i>
						<%=current_user.restaurant.location.country %>
					</li>
					<% if current_user.restaurant.tags.count >= 1 %>
					<li>
						<i class="entypo-user"></i>
						<%=current_user.restaurant.tags.first.title %>
					</li>
					<% end %>
					<% if current_user.restaurant.tags.count == 2 %>
					<li>
						<i class="entypo-user"></i>
						<%=current_user.restaurant.tags.last.title %>
					</li>
					<% end %>
					<% if current_user.restaurant.website && current_user.restaurant.website.length > 0 %>
					<li>
						<a href="<%=current_user.restaurant.website %>" target="_blank">
							<i class="entypo-globe"></i>
							<%=current_user.restaurant.website %>
						</a>
					</li>
					<% end %>
					<% if current_user.restaurant.telephone && current_user.restaurant.telephone.length > 0 %>
					<li>
						<i class="entypo-phone"></i>
						<%=current_user.restaurant.telephone %>
					</li>
					<% end %>
				</ul>
			</div>
		</div>
	</section>
	<div class="row">
		<div class="col-sm-12">
			<div class="profile-buttons">
				<a href="javascript:;" onclick="jQuery('#modal-editsettings').modal('show');" class="btn btn-white btn-icon icon-left" style="margin-right:12px;">
					<i class="entypo-cog"></i>
					<%=t("profile.account_settings") %>
				</a>
				<a href="javascript:;" onclick="jQuery('#modal-editdescription').modal('show');" class="btn btn-white btn-icon icon-left">
					<i class="entypo-brush"></i>
					<%=t("profile.restaurant_description") %>
				</a>
			</div>
		</div>
	</div>
	<header class="row" style="margin-bottom:60px;">
		<img src="<%=current_user.restaurant.restaurant_image.url(:cropped_default_retina) %>" alt="" class="col-sm-4" />
		<div class="col-sm-8">
			<br />
			<%=current_user.restaurant.description %>
		</div>
	</header>
	<section class="profile-feed">
		<div class="profile-stories">
			<div class="row gallery-env draggable-portlets">
				<%
				for i in 0..6
					current_date = (Date.today.beginning_of_week+i)
				%>
				<div class="row">
					<div class="col-sm-12">
						<h4><%=current_date.strftime("%d. %B %Y") %></h4>
					</div>
				</div>
				<div class="row">
					<span class="sorted ui-sortable">
						<% current_user.restaurant.daily_dishes.where(:display_date => current_date.to_datetime).each do |dish| %>
							<%= render(:partial => "neon/daily_dish_panel", :locals => {:daily_dish => dish }) %>
						<% end %>
					</span>
				</div>
				<% end %>
			</div>
		</div>
	</section>
</div>

<% content_for :modals do %>
	<%=render :partial => "modal_editsettings" %>
	<%=render :partial => "modal_editdescription" %>
<% end %>