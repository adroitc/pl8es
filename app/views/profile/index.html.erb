<% content_for :body_class, "page-body" %>
<div class="page-container">
  <div class="sidebar-menu">
    <%=render :partial => "layouts/menuheader" %>
    <%=render :partial => "layouts/menu" %>
  </div>
  <div class="main-content">
    <%=render :partial => "layouts/topbar" %>
    <ol class="breadcrumb bc-3">
      <li>
        <a href="<%=url_for :controller => "dashboard", :action => "index" %>">
          <i class="entypo-home"></i>
          <%=t("layouts.menu.dashboard") %>
        </a>
      </li>
      <li class="active">
        <strong><%=t("layouts.menu.restaurant") %></strong>
      </li>
    </ol>
    <div class="profile-env">
     	<header class="row" style="height:100px;">
     		<div class="col-sm-2">
     			<img src="<%=@user.restaurant.logo_image.url(:cropped_website) %>" alt="" class="" width="108" height="72" />
     		</div>
     		<div class="col-sm-10">
     			<ul class="profile-info-sections">
     				<li>
     					<div class="profile-name">
     						<strong style="color:#000">
     							<%=@user.restaurant.name %>
                </strong>
     						<span>
     							<%=@user.restaurant.email %>
     						</span>
     					</div>
     				</li>
     				<li>
     					<div class="profile-stat">
     						<h3><%=@user.restaurant.menus.count %></h3>
     						<a href="<%=url_for :controller => "menumalist", :action => "index" %>">
                  <span><%=@user.restaurant.menus.count == 1 ? t("profile.menu") : t("profile.menus") %></span>
                </a>
     					</div>
     				</li>
     				<li>
     					<div class="profile-stat">
     						<h3><%=@user.restaurant.dishes.count %></h3>
     						<span><%=@user.restaurant.dishes.count == 1 ? t("profile.dish") : t("profile.dishes") %></span>
     					</div>
     				</li>
     			</ul>
     		</div>
     	</header>
      <div class="row">
          <div class="col-sm-12">
            <div class="profile-buttons">
            	<a href="javascript:;" onclick="jQuery('#modal-editsettings').modal('show');" class="btn btn-white btn-icon icon-left" style="margin-right:12px;">
            		<i class="entypo-cog"></i>
            		<%=t("profile.account_settings") %>
            	</a>
            	<a href="javascript:;" onclick="jQuery('#modal-editdescription').modal('show');" class="btn btn-white btn-icon icon-left">
            		<i class="entypo-brush"></i>
            		<%=t("profile.restaurant_description") %>
            	</a>
            </div>
          </div>
        </div>
     	<header class="row" style="margin-bottom:60px;">
     		<img src="<%=@user.restaurant.restaurant_image.url(:cropped_default_retina) %>" alt="" class="col-sm-4" />
     		<div class="col-sm-8">
          <br />
          <%=@user.restaurant.description %>
     		</div>
     	</header>
     	<section class="profile-info-tabs">
     		<div class="row">
     			<div class="col-sm-offset-2 col-sm-10">
     				<ul class="user-details">
              <% if @user.restaurant.categories.count >= 1 %>
     					<li>
                <%=@user.restaurant.categories.first.title %>
     					</li>
              <% end %>
              <% if @user.restaurant.categories.count == 2 %>
     					<li>
                <%=@user.restaurant.categories.last.title %>
     					</li>
              <% end %>
     				</ul>
     			</div>
     		</div>
     	</section>
      <section class="profile-feed">
      	<div class="profile-stories">
          <% @user.restaurant.daily_dishes.where(["display_date >= (?)", DateTime.now-7.days]).reverse.each do |daily_dish_level| %>
          <% daily_dishes = @user.restaurant.daily_dishes.where(["display_date = (?)", daily_dish_level.display_date]) %>
          <article class="story">
          	<div class="story-content" style="width:100%;">
          		<header>
          			<div class="publisher">
          				<strong><%=@user.restaurant.name %></strong> published <%=daily_dishes.count %> daily dish
          				<em><%=(DateTime.now.to_date-daily_dish_level.display_date.to_date).to_i %> days ago</em>
          			</div>
          			<div class="story-type">
          				<i class="entypo-newspaper"></i>
          			</div>
          		</header>
          		<div class="story-main-content">
          			<div class="row">
                  <% daily_dishes.each do |daily_dish| %>
          				<div class="col-sm-3">
                    <img class="img-responsive img-rounded full-width" src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7" data-src="<%=daily_dish.image.present? ? daily_dish.image.url(:cropped_default_retina) : "http://placehold.it/400x400" %>" />
          				</div>
                  <% end %>
          			</div>
          		</div>
          	</div>
          </article>
          <% end %>
      	</div>
      </section>
    </div>
    <%=render :partial => "layouts/footer" %>
  </div>
</div>
<%=render :partial => "modal_editsettings" %>
<%=render :partial => "modal_editdescription" %>