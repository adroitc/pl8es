<%= neon_modal :id => "editsettings", :width => "678px", :title => "Edit settings" do |m| %>
<%= form_tag({:controller => "ajax/profile", :action => "editsettings"}, {:multipart => true, :role => "form", :class => "pl8es_c_ajaxform validate", :id => "form_editprofile"}) do %>
<%=neon_modal_body do |b| %>
<div class="row">
  <div class="col-sm-12">
    <div class="row col-sm-12 form-group" style="padding:0px;">
      <label for="form-email" class="col-sm-12 control-label"><strong>Default language</strong></label>
      <% Language.all.each do |language| %>
      <div class="col-sm-3">
        <input class="icheck-2-radio" type="radio" id="form-default_language-<%=language.id %>" name="default_language" value="<%=language.id %>" <%="checked" if @user.default_language == language %>>
        <label for="form-default_language-<%=language.id %>"><%=language.title.capitalize %></label>
      </div>
      <% end %>
    </div>
    <div class="col-sm-12 form-group" style="padding:0px;">
      <label for="form-email" class="control-label"><strong>Email</strong></label>
	    <input name="email" type="text" class="form-control" id="form-email" placeholder="Email" data-validate="maxlength[28]" value="<%=@user.email %>" required>
    </div>
    <div class="col-sm-12 form-group" style="padding:0px;">
      <label for="form-address" class="control-label"><strong>Address</strong></label>
	    <input name="address" type="text" class="form-control" id="form-address" placeholder="Address" data-validate="maxlength[28]" value="<%=@user.address %>" required>
    </div>
    <div class="col-sm-4 form-group" style="padding-left:0px;">
      <label for="form-zip" class="control-label"><strong>Zip code</strong></label>
	    <input name="zip" type="text" class="form-control" id="form-zip" placeholder="Zip code" data-validate="maxlength[28]" value="<%=@user.zip %>" required>
    </div>
    <div class="col-sm-4 form-group" style="padding:0px;">
      <label for="form-city" class="control-label"><strong>City</strong></label>
	    <input name="city" type="text" class="form-control" id="form-city" placeholder="City" data-validate="maxlength[28]" value="<%=@user.city %>" required>
    </div>
    <div class="col-sm-4 form-group" style="padding-right:0px;">
      <label for="form-country" class="control-label"><strong>Country</strong></label>
	    <input name="country" type="text" class="form-control" id="form-country" placeholder="Country" data-validate="maxlength[28]" value="<%=@user.country %>" required>
    </div>
    <div class="col-sm-6 form-group" style="padding-left:0px;">
      <label for="form-website" class="control-label"><strong>Website</strong></label>
	    <input name="website" type="text" class="form-control" id="form-website" placeholder="Website" data-validate="maxlength[28]" value="<%=@user.website %>">
    </div>
    <div class="col-sm-6 form-group" style="padding-right:0px;">
      <label for="form-telephone" class="control-label"><strong>Telephone</strong></label>
	    <input name="telephone" type="text" class="form-control" id="form-telephone" placeholder="Telephone" data-validate="maxlength[28]" value="<%=@user.telephone %>">
    </div>
  </div>
</div>
<% end %>
<%=neon_modal_footer do |b| %>
<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
<button type="submit" class="btn btn-success">
	Save
</button>
<% end %>
<% end %>
<% end %>